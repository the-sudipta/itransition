# Enable mod_rewrite
RewriteEngine On

# -------------------------------------------
# ‚úÖ Allow root path (project base) to load index.php
# -------------------------------------------
RewriteCond %{REQUEST_URI} ^/itransition/?$
RewriteRule ^.*$ - [L]

# -------------------------------------------
# üõ°Ô∏è Redirect any other direct folder access to 404
# -------------------------------------------
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^.*$ /itransition/view/error/_404_not_found_error.php [L]

# -------------------------------------------
# üö´ Prevent directory listing
# -------------------------------------------
Options -Indexes

# -------------------------------------------
# ‚ùå Block direct access to sensitive files (optional)
# Uncomment and use if needed
# -------------------------------------------
#<FilesMatch "^(backend_utility_functions\.php|db_connect\.php|.*_Repo\.php)$">
#    Order Allow,Deny
#    Deny from all
#</FilesMatch>

# -------------------------------------------
# ‚ö†Ô∏è Default 404 Not Found handler
# -------------------------------------------
ErrorDocument 404 /itransition/view/error/_404_not_found_error.php
